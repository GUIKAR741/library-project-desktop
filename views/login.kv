<Login>
    BoxLayout:
        orientation: 'vertical'
        padding: "50dp"
        Image:
            center: self.parent.center
            source: 'res/Logo.png'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint_x: .2
                text: root.textoEmail
                size_hint_y: None
                font_size: '20sp'
                height: '40dp'
            TextInput:
                id: email
                text: root.email
                font_size: '20sp'
                size_hint_x: .7
                size_hint_y: None
                multiline: False
                height: '40dp'
                center: 
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint_y: None
                size_hint_x: .2
                text: root.textoSenha
                font_size: '20sp'
                height: '40dp'
            TextInput:
                id: senha
                text: root.senha
                size_hint_y: None
                size_hint_x: .7
                password: True
                multiline: False
                font_size: '20sp'
                height: '40dp'
        BoxLayout:
            Button:
                text: root.textoBotaoLogin
                size_hint_y: None
                font_size: '20sp'
                height: '60dp'
                background_color: 0.1607843137254902, 0.7137254901960784, 0.9647058823529412, 1
                on_release:
                    root.fazerLogin()