<Emprestar>
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba:1,1,1,1
            Rectangle:
                size:self.size
                pos:self.pos
        MyActionBar:
            prev: True
            func: root.funcao
        BoxLayout:
            orientation: 'vertical'
            padding: 10 
            BoxLayout:
                Label:
                    text: root.textoLabelLivro
                    color: 0, 0, 0, 1
                    height: '32dp'
                    size_hint_y: None
                    size_hint_x: .2
                Spinner:
                    id: livrosSpn
                    size_hint_y: None
                    size_hint_x: .7
                    height: '32dp' 
                    text: root.textoSpnLivro
                    values: root.listaSpnLivro
                    background_color: 0.1607843137254902, 0.7137254901960784, 0.9647058823529412, 1
                    on_text:
                        if args[1]!='Livro':\
                        root.addExemplar(args)
            BoxLayout:
                Label:
                    text: root.textoLabelExemplar
                    color: 0, 0, 0, 1
                    height: '32dp'
                    size_hint_y: None
                    size_hint_x: .2
                Spinner:
                    id: exemplarSpn
                    size_hint_y: None
                    size_hint_x: .7
                    height: '32dp' 
                    text: root.textoSpnExemplar
                    values: root.listaSpnExemplar
                    background_color: 0.1607843137254902, 0.7137254901960784, 0.9647058823529412, 1
                    on_text:
                        root.escolheExemplar(args)
            BoxLayout:
                Label:
                    text: root.textoLabelUsuario
                    color: 0, 0, 0, 1
                    height: '32dp'
                    size_hint_y: None
                    size_hint_x: .2
                Spinner:
                    id: usuariosSpn
                    size_hint_y: None
                    size_hint_x: .7
                    height: '32dp' 
                    text: root.textoSpnUsuario
                    values: root.listaSpnUsuario
                    background_color: 0.1607843137254902, 0.7137254901960784, 0.9647058823529412, 1
                    on_text:
                        if args[1]!='Usuario':\
                        root.idUsuario = args[1].id
            BoxLayout:
                Button:
                    size_hint_y: .5
                    height: '32dp'
                    text: "Emprestar"
                    background_color: 0.1607843137254902, 0.7137254901960784, 0.9647058823529412, 1
                    on_release:
                        root.emprestar()
