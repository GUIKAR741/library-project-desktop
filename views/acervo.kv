<Livros>
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba:1,1,1,1
            Rectangle:
                size:self.size
                pos:self.pos
        MyActionBar:
            prev: True
            func: root.funcao
        BoxLayout:
            ScrollView:
                BoxLayout:
                    id: box
                    orientation: 'vertical'
                    size_hint_y:None
                    height:self.minimum_height
        
<LivrosCadastrar>
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba:1,1,1,1
            Rectangle:
                size:self.size
                pos:self.pos
        MyActionBar:
            prev: True
            func: root.funcao
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    Label:
                        text: root.textoLabelTitulo
                        color: 0, 0, 0, 1
                        height: '32dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: titulo
                        text: root.textTitulo
                        size_hint_y: None
                        size_hint_x: .7
                        multiline: False
                        height: '32dp'
                        focus: True
                        on_text:
                            root.textTitulo = self.text
                BoxLayout:
                    Label:
                        text: root.textoLabelAutor
                        color: 0, 0, 0, 1
                        height: '32dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: autor
                        text: root.textAutor
                        size_hint_y: None
                        size_hint_x: .7
                        multiline: False
                        height: '32dp'
                        on_text:
                            root.textAutor = self.text
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    Label:
                        text: root.textoLabelUrl
                        color: 0, 0, 0, 1
                        height: '32dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: url
                        text: root.textUrl
                        size_hint_y: None
                        size_hint_x: .7
                        height: '32dp'
                        multiline: False
                        focus: True
                        on_text:
                            root.textUrl = self.text
                BoxLayout:
                    Label:
                        text: root.textoLabelEditora
                        color: 0, 0, 0, 1
                        height: '32dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: editora
                        text: root.textEditora
                        size_hint_y: None
                        size_hint_x: .7
                        multiline: False
                        height: '32dp'
                        on_text:
                            root.textEditora = self.text
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    Label:
                        text: root.textoLabelAno
                        color: 0, 0, 0, 1
                        height: '32dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: ano
                        text: root.textAno
                        size_hint_y: None
                        size_hint_x: .7
                        multiline: False
                        height: '32dp'
                        on_text:
                            root.validaAno()
                BoxLayout:
                    Label:
                        text: root.textoLabelIdioma
                        color: 0, 0, 0, 1
                        height: '32dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: idioma
                        text: root.textIdioma
                        size_hint_y: None
                        size_hint_x: .7
                        multiline: False
                        height: '32dp'
                        on_text:
                            root.textIdioma = self.text
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    Label:
                        text: root.textoLabelISBN
                        color: 0, 0, 0, 1
                        height: '32dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: isbn
                        text: root.textISBN
                        size_hint_y: None
                        size_hint_x: .7
                        multiline: False
                        height: '32dp'
                        on_text:
                            root.textISBN = self.text
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    Label:
                        text: root.textoLabelDescricao
                        color: 0, 0, 0, 1
                        height: '60dp'
                        size_hint_y: None
                        size_hint_x: .2
                    TextInput:
                        id: descricao
                        text: root.textDescricao
                        size_hint_y: None
                        size_hint_x: .7
                        height: '60dp'
                        multiline: True
                        on_text:
                            root.textDescricao = self.text
            BoxLayout:
                Button:
                    size_hint_y: .5
                    height: '32dp'
                    text: root.textoBotaoCadastrar
                    on_release:
                        root.cadLivro()

