                TextInput:
                    id: codigoText
                    size_hint_y: None
                    text: root.codigo
                    size_hint_x: .7
                    height: '32dp'
                    on_text:
                        root.codigo = self.text
            BoxLayout:
                Button:
                    size_hint_y: .5
                    height: '32dp'
                    text: root.textoBotaoCadastrar
                    on_release:
                        root.cadastrarExemplar()

