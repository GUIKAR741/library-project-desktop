<ExemplaresCadastrar>
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba:1,1,1,1
            Rectangle:
                size:self.size
                pos:self.pos
        MyActionBar:
            prev: True
            func: root.funcao
        BoxLayout:
            orientation: 'vertical'
            padding: 10 
            BoxLayout:
                Label:
                    text: root.textoLabelLivro
                    color: 0, 0, 0, 1
                    height: '32dp'
                    size_hint_y: None
                    size_hint_x: .2
                Spinner:
                    id: livrosSpn
                    size_hint_y: None
