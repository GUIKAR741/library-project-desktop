#:import Factory kivy.factory.Factory
<ActionSpinnerOptions@SpinnerOption>
    background_color: .4, .4, .4, 1
    text_language: "pt-BR"

<ActionSpinner@Spinner+ActionItem>
    canvas.before:
        Color:
            rgba: 0.128, 0.128, 0.128, 1
        Rectangle:
            size: self.size
            pos: self.pos
    border: 27, 20, 12, 12
    background_normal: 'atlas://data/images/defaulttheme/action_group'
    option_cls: Factory.ActionSpinnerOptions

<MyActionBar>
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            title: root.textoLogo
            app_icon: 'res/icon.png'
            with_previous: root.prev
            app_icon_height: 5
            previous_image_height: 5
            on_release: root.func()
        ActionSpinner:
            id: usuarios
            text: root.textoUsuarios
            values: root.listaOpcoesUsuarios
            on_text:
                root.usuario(args)
        ActionSpinner:
            id: acervo
            text: root.textoAcervo
            values: root.listaOpcoesAcervo
            on_text:
                root.acervo(args)
        ActionSpinner:
            id: reservas
            text: root.textoReservas
            values: root.listaOpcoesReservas
            on_text:
                root.reserva(args)
        ActionSpinner:
            id: emprestimos
            text: root.textoEmprestimos
            values: root.listaOpcoesEmprestimos
            on_text:
                root.emprestimo(args)
        ActionButton:
            text: root.textoSair
            on_release: 
                root.sair()

<Exibir>
    size_hint_y:None
    height:'40sp'
    Label:
        id: texto
        color: 0, 0, 0, 1
        text: root.texto
        font_size:'15sp'
    Button:
        id: att
        text: root.textoBotaoAtualizar
        size_hint_x:None
        width:'70sp'
        on_release: root.att(root)
    Button:
        id: deletar
        text: root.textoBotaoExcluir
        size_hint_x:None
        width:'70sp'
        on_release: root.deletar(root)

<PopupError>:
    size_hint: .5, .5
    auto_dismiss: False
    title: root.titulo
    BoxLayout:
        id: box
        orientation: 'vertical'
        Label:
            text: root.texto
        Button:
            size_hint_y: None
            height: '50sp'
            text: root.textoBotao
            on_press: root.funcao(root)